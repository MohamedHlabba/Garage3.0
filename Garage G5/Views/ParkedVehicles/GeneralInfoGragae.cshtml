@using Microsoft.AspNetCore.Http;
@model Garage_G5.Models.ViewModels.VehicleFilterViewModel


@{
    ViewData["Title"] = "Garage";
}

<section id="tables" class="my-5">

    <!-- Heading -->
    <div id="h1"><h1 class="h1">Garage G5</h1></div>
    @{Html.RenderPartial("NavButtonsPartial");}

<div id="subHeading">
    <!-- Subheading -->
    <div class="row">
        <div class="col-sm-2" >
            <h3 class="sh2 mb-4" style="clear:both;">Number of Free places in the garage:</h3>
        </div>
        <div class="col-sm-10">
            <svg xmlns="http://www.w3.org/2000/svg">
                <g>
                    <rect x="0" y="0" width="50" height="50" @*fill="#1b6ec2"*@ fill="#4d2d43"></rect>
                    <text x="5" y="30" font-family="Verdana" font-size="20" fill="White"@*fill="aquamarine"*@>@Context.Session.GetInt32("FreePlaces")</text>
                </g>
            </svg>
        </div>
    </div>
    <h3 class="sh2 mb-4" style="clear:both;">Vehicles currently in the garage:</h3>
    </div>
    <div class="row mb-5">

        <!-- Grid column -->
        <div class="col-md-12">
            <form asp-action="GeneralInfoGragae">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" asp-for="RegistrationNum" onchange="this.form.submit()" placeholder="Search on Registration No. or Vehicle model" />
                    <div class="input-group-append">
                        <select asp-for="VehicleType" asp-items="@Html.GetEnumSelectList<VehicleType>()" onchange="this.form.submit()" class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                    </div>
                    <div class="input-group-append  ">
                        <button type="submit" onchange="this.form.submit()" class="btn btn-dark" style="border-radius: 4px;margin-top: 0; padding: 6px 18px;"><i class="fa fa-search"> &emsp;Search</i></button>
                    </div>
                </div>
            </form>

            <partial name="GenralPartial" />

        </div>
        <!-- Grid column -->
    </div>
    <!-- Grid row -->
</section>
